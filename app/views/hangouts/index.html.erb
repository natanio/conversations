<div class="row text-center">
  <div class="small-12 medium-12 large-12">
    <h1>Join a Conversation About <%= @language.name.capitalize %></h1>

      <%= link_to new_language_hangout_path(@language, @hangout), class: "button" do %>
        <i class="fi-plus"></i> New Conversation
      <% end %>
  </div>
</div>
<div class="row">
  <div id="pins" class="transitions-enabled small-12 medium-10 large-6">
    <% @hangouts.each do |hangout| %>
    <% unless hangout.private %>
      <div class="chat-panel box text-center">
        <div class="chat-title">
          <h5><%= hangout.name %></h5>
        </div>
        <div class="chat-time">
          <div class="row">
            <div class="large-12 columns">
              <div class="row">
                <div class="large-6 columns">
                  <p><%= hangout.start_time.strftime("%b %e, '%y - %I:%M%P") %></p>
                </div>
                <div class="large-4 columns">
                  <p><i class="fi-clock"></i> <%= chat_length(hangout.start_time, hangout.end_time) %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="chat-description">
          <p><%= hangout.description %></p>
          <div class="host">
            <%= image_tag hangout.user.avatar.url(:thumb) %>
            <p><%= hangout.user.username %>
            <% if ( user_signed_in? && hangout.user == current_user) || ( user_signed_in? && current_user.admin? ) %>
            <%= link_to edit_language_hangout_path(@language, hangout), title: "Edit" do %>
              <span class="left-margin"><i class="fi-pencil"></i></span>
            <% end %>
            <%= link_to language_hangout_path(@language, hangout), title: "Delete", method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="left-margin"><i class="fi-x"></i></span>
              </p>
            <% end %>
          <% end %>
          </div>
          <br>
          
        </div>
        <div class="chat-buttons">
          <ul>
            <% if is_live(hangout.start_time, hangout.end_time) %>
            <li class="chat"><%= link_to 'Join', language_hangout_path(@language, hangout), class: "chat-button-big" %></li>
            <% else %>
              <li class="chat"><%= link_to 'RSVP', language_hangout_path(@language, hangout), class: "chat-button-big" %></li>
            <% end %>
            <li class="chat"></i><%= link_to language_hangout_path(@language, hangout), class: "chat-button" do %>
              <i class="fi-torsos"></i> 23
              <% end %></li>
          </ul>
          
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
<br>

