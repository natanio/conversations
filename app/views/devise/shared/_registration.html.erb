<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>
	<div class="row">
		<div class="small-12 medium-112 large-12">
			<div class="row">
				<div class="small-4 medium-4 large-4 columns">
					<%= f.email_field :email, placeholder: "Enter your email", autofocus: true %>
				</div>
			<div class="small-4 medium-4 large-4 columns">
				<%= f.password_field :password, placeholder: "Enter a password", autocomplete: "off" %>
			</div>
			<div class="small-4 medium-4 large-4 columns">
				<%= f.password_field :password_confirmation, placeholder: "Confirm your password", autocomplete: "off" %>
			</div>

	<div class="row">
		<div class="small-12 medium-12 large-12 columns">
			<%= f.submit "Sign up", class: "button success" %><br>
		</div>
	</div>
</div>
</div>
</div>
	<% end %>

	
	