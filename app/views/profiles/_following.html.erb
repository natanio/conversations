<div class="followers text-center row">
	<div class="large-12">
		<h4><%= @profile.user.username + ' follows' %></h4>
		<% if @user.following_by_type_count('User') == 0 %>
		<% if current_user == @profile.user %>
		<p>You aren't following anyone yet. Don't be shy! :)</p>
		<% else %>
		<p>This person isn't following anyone yet.</p>
		<% end %>
	<% else %>
	<table>
		<tbody>
			<% @following.each do |follower| %>
				<tr>
					<td><%= link_to( image_tag(follower.avatar.url(:thumb)), profile_path(follower.profile)) %></td>
					<td><%= link_to follower.username, profile_path(follower.profile) %><br>
						<%= truncate(follower.bio, :length => 60) %></td>
					<td>
						<% unless current_user.following?(follower) %>
						<%= link_to 'Follow', follows_path(id: follower.profile), method: :post, id:"follow-submit", class: "button small success round tiny" %>
						<% else %>
						<%= link_to 'Unfollow', follow_path(id: follower.profile), method: :delete, class: 'button small round alert tiny' %>
						<% end %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<% end %>
</div>
</div>