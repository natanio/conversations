<div class="text-center">
  <%= form_for([@language, @hangout, Post.new], remote: true) do |f| %>

    <div class="medium-12 large-10 large-centered columns">
        <%= f.text_area :content, placeholder: "Your comment", rows: 5 %>     
    </div>

    <div class="medium-12 large-10 large-centered columns">
      <%= f.text_field :all_tags, placeholder: "Tags separated with comma" %>
    </div>
        
        <div class="large-3 inline">
          <a href="#" class="button round tiny secondary" data-reveal-id="videoChat"><span data-tooltip aria-haspopup="true" class="has-tip tip-top" title="Click to share a view videos"><i class="fi-video"></i></span></a>
        </div>
        <div class="large-3 inline">
          <a href="#" class="button tiny secondary round" data-reveal-id="tagModal"><span data-tooltip aria-haspopup="true" class="has-tip tip-top" title="Tags help you see what a conversation was about. Clicking on tags will show you posts only with those tags.">Show Tags</span></a>
        </div>
        <div class="large-3 inline">
          <%= f.submit "Post", class: "button success small" %>
        </div>
   
  <% end %>
</div>