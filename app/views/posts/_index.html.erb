<div class="row mt pt">
  <div class="large-5 columns">
    <div class="top-pad glassy-bg">
      <% unless user_signed_in? %>
      <h3>To join this conversation, you need to 'Sign In.'
        <%= link_to 'Sign In', new_user_session_path, class: "button" %>
      <% else %>
        <%= render partial: "posts/new" %>
      <% end %>
    </div>
    <div class="tags-cloud glassy-bg">
      <h4>Tags Cloud</h4>
    </div>
  </div>
  <div class="large-7 columns" id="posts">
    <div class="posts-list">
      <%= render @posts.reverse %>
    </div>
  </div>
</div>