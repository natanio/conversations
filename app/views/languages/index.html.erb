<% unless user_signed_in? %>
<%= render 'layouts/welcome' %>
<% else %>
  <div class="row">

    <h1>Choose a Language</h1>
    <div class="panel callout radius small-12 medium-12 large-12 columns">
      <h3>What language do you want to practice?</h3>
    </div>
  </div>

    <div class="row">
      <div id="pins" class="transitions-enabled small-12 medium-9 large-7">
        <% @languages.each do |language| %>
        <div class="box panel">
          <%= link_to language.name, language_hangouts_path(language) %>
        </div>
        <% end %>
      
      </div>
    </div>

  <% end %>